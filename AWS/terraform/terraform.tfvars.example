# AWS IoT Sound Analytics - Terraform Variables Example
# Copy this file to terraform.tfvars and customize the values

# General Configuration
project_name = "iot-sound-analytics"
environment  = "dev"
aws_region   = "us-east-1"
owner        = "iot-team"

# Networking Configuration
vpc_cidr = "10.0.0.0/16"

public_subnet_cidrs = [
  "10.0.1.0/24",
  "10.0.2.0/24",
  "10.0.3.0/24"
]

private_subnet_cidrs = [
  "10.0.11.0/24",
  "10.0.12.0/24",
  "10.0.13.0/24"
]

database_subnet_cidrs = [
  "10.0.21.0/24",
  "10.0.22.0/24",
  "10.0.23.0/24"
]

# Security Configuration
kms_key_rotation = true
admin_users = [
  "admin@example.com"
]

# IoT Services Configuration
iot_thing_type_name = "SoundSensor"
iot_policy_name     = "SoundSensorPolicy"
kinesis_shard_count = 2
kinesis_retention_hours = 24
sqs_visibility_timeout_seconds = 30
sqs_message_retention_seconds  = 1209600

# Storage Configuration
dynamodb_billing_mode = "PAY_PER_REQUEST"
dynamodb_read_capacity = 5
dynamodb_write_capacity = 5
rds_instance_class = "db.t3.micro"
rds_allocated_storage = 20
rds_max_allocated_storage = 100
rds_backup_retention_period = 7
rds_backup_window = "03:00-04:00"
rds_maintenance_window = "sun:04:00-sun:05:00"
s3_lifecycle_enabled = true
s3_transition_to_ia_days = 30
s3_transition_to_glacier_days = 90
elasticache_node_type = "cache.t3.micro"
elasticache_num_cache_nodes = 1

# Compute Configuration
lambda_timeout = 30
lambda_memory_size = 512
lambda_runtime = "python3.9"
fargate_cpu = 256
fargate_memory = 512
step_functions_state_machine_name = "SoundAnalyticsWorkflow"

# Analytics Configuration
sagemaker_instance_type = "ml.t3.medium"
sagemaker_instance_count = 1
kinesis_analytics_application_name = "SoundAnalyticsApp"
quicksight_namespace = "iot-sound-analytics"

# API Configuration
api_gateway_name = "iot-sound-analytics-api"
api_gateway_stage_name = "v1"
cloudfront_price_class = "PriceClass_100"
alb_name = "iot-sound-analytics-alb"

# Monitoring Configuration
cloudwatch_log_retention_days = 30
xray_tracing_enabled = true
sns_topic_name = "iot-sound-analytics-alerts"
